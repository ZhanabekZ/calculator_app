<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:theme="@style/Theme.AppCompat"

    >

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/white"
        android:layout_weight="1"
        android:textSize="40pt"
        android:gravity="center|right"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="@color/black"
        android:layout_marginBottom="2pt"

        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/butAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="AC"
                android:onClick="acEvent"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="@color/purple_700" />

            <Button
                android:id="@+id/butPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:gravity="center"
                android:text="+/-"
                android:onClick="numberEvent"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/butDivide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="/"
                android:onClick="operatorEvent"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="@color/purple_700" />

            <Button
                android:id="@+id/butMultiply"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:gravity="center"
                android:text="*"
                android:onClick="operatorEvent"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2pt">

            <Button
                android:id="@+id/but7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="7"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="@color/purple_700" />

            <Button
                android:id="@+id/but8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="8"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="@color/purple_700" />

            <Button
                android:id="@+id/but9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="9"
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/butPercent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="%"
                android:onClick="percentEvent"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="@color/purple_700" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2pt">

            <Button
                android:id="@+id/but4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="4"
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/but5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="5"
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/but6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="6"
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/butPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="+"
                android:onClick="operatorEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2pt"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/but1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="1"
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/but2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="2"
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/but3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:text="3"
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/butMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="-"
                android:onClick="operatorEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

        </TableRow>

        <TableRow
            android:layout_marginTop="2pt"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/but0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="3.2"
                android:background="@color/blueback"
                android:text="0"
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

            <Button
                android:id="@+id/butDot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="3.2"
                android:background="@color/blueback"
                android:text="."
                android:onClick="numberEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />



            <Button
                android:id="@+id/butEqual"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="="
                android:onClick="equalEvent"
                android:gravity="center"
                android:textColor="@color/purple_700"
                android:textSize="10pt" />

        </TableRow>


    </TableLayout>
</LinearLayout>